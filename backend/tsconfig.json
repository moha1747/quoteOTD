{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "baseUrl": "src",
      "outDir": "dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "typeRoots": ["/node_modules/@types", "/src/@types"] // Assuming you move your .d.ts to ./src/@types
    },
    "include": ["src/**/*", "/src/@types/types.d.ts"
  ]
  }
  